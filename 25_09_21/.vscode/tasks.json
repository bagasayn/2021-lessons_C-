{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Debug",
			"command": "D:\\gcc\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}_DEBUG.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: D:\\gcc\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Release",
			"command": "D:\\gcc\\mingw64\\bin\\g++.exe",
			"args": [
				"-O3",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}_RELEASE.exe"
			],
			"options": {
				"cwd": "D:\\gcc\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
